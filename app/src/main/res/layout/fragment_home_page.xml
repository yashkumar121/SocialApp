<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomePageActivity"
    android:orientation="vertical"
    android:background="@color/tabbgcolor">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dp0.5"
    android:elevation="@dimen/dp0.5"
    android:layout_marginBottom="@dimen/dp20"
    app:cardBackgroundColor="#f2f2f2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp10"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp70"
            android:id="@+id/dp"
            android:src="@drawable/dp"
            android:layout_marginRight="@dimen/dp20"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="John Marley"

            android:textStyle="bold"
            android:layout_gravity="top"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp18"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/dp5"
        android:layout_margin="@dimen/dp18"
        app:cardCornerRadius="@dimen/dp20"
        app:cardBackgroundColor="@color/tabbgcolor">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hintpost"
            android:padding="@dimen/dp10"
            android:id="@+id/post_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"></EditText>
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:id="@+id/post_done"
            app:srcCompat="@drawable/send"
            android:layout_toRightOf="@+id/post_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout></android.support.v7.widget.CardView>

    </LinearLayout></android.support.v7.widget.CardView>
    <bluetooth_demo.kct.com.socialdemobyfirebase.util.AVLoadingIndicatorView
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/title"
        android:layout_gravity="center_horizontal"
        app:indicatorColor="@color/colorloginend"
        app:indicatorName="BallPulseIndicator"
        android:visibility="visible"/>
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recycler"></android.support.v7.widget.RecyclerView>
</LinearLayout>